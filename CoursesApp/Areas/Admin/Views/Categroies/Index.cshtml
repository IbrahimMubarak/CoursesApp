@model IEnumerable<CoursesApp.Models.Categroiesmodel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<h2>All Categories</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<br />
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentName)
        </th>
        <th></th>
    </tr>
   
@foreach (var item in Model)
{


    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @if (item.ParentName == null)
        {

            <td style="color:red;font-weight:bold">
                Has No Parent
            </td>
        }
        else
        {
        <td>

            @Html.DisplayFor(modelItem => item.ParentName)
        </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }


</table>
