@model CoursesApp.Models.Categroiesmodel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Category</h2>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div>
  
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <br />
        @if (Model.ParentName != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ParentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ParentName)
            </dd>
        }
        else
        {
            <dt>
                @Html.DisplayNameFor(model => model.ParentName)
            </dt>

            <dd style="color:red;font-weight:bold">
                Has No Parent
            </dd>
        }
    </dl>
    <br />
    @if(ViewBag.message!=null)
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
    @using (Html.BeginForm("DeleteCat", "Categroies",FormMethod.Post)) {
        @Html.AntiForgeryToken()
        <input type="hidden"name="id" id="id" value="@Model.Id" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back To List","Index",null,new { @class = "btn btn-warning" })
        </div>
    }
</div>
<br />