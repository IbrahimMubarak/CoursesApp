@model IEnumerable<CoursesApp.Models.CourseModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<h2>All Courses</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-success" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
           
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.TrainerName)
        </td>
   
        <td>
            @Html.ActionLink("Trainees", "Index", "Trainees", new { id = item.Id }, new { @class = "btn btn-dark" }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
