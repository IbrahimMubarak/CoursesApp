@model IEnumerable<CoursesApp.Models.TraineeCourseModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<h2>@ViewBag.courseName.Name Course Trainees</h2>
@if (Model.Any())
{
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trainees.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainees.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistirationDate)
        </th>
        
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Trainees.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trainees.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistirationDate) 
        </td>
        
    </tr>
}
    
</table>
}
else
{   
    <div class="alert alert-danger">
        Empty Course!
    </div>
}

@Html.ActionLink("Back to Courses", "Index", "Courses",null, new { @class = "btn btn-warning" })